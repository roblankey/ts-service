{
  "name": "ts-service",
  "version": "0.1.0",
  "description": "A simple sample typescript json service",
  "repository": {
    "type": "git",
    "url": "https://github.com/roblankey/ts-service"
  },
  "author": "Rob Lankey",
  "license": "MIT",
  "main": "dist/src/server.js",
  "types": "dist/src/server.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run check && npm run compile && npm run lint",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "debug": "npm run build && npm run watch-debug",
    "fix": "gts fix",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "serve": "node dist/src/server.js",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^10.0.3",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.6.0",
    "gts": "^1.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "~3.5.0"
  }
}
